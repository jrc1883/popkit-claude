{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "description": "PopKit plugin hooks for orchestration, validation, and agent coordination",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/pre-tool-use.py",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/agent-orchestrator.py",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python hooks/chain-validator.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/post-tool-use.py",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python hooks/agent-observability.py",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "python hooks/context-monitor.py",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/quality-gate.py",
            "timeout": 180000
          },
          {
            "type": "command",
            "command": "python hooks/doc-sync.py",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/agent-context-integration.py",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python hooks/chain-metrics.py",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/command-learning-hook.py",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash|Task",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/bug_reporter_hook.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/user-prompt-submit.py",
            "timeout": 3000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/session-start.py",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python hooks/knowledge-sync.py",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/stop.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/subagent-stop.py",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python hooks/output-validator.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/notification.py",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
