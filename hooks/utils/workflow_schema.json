{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://popkit.dev/schemas/workflow.json",
  "title": "PopKit Workflow Definition",
  "description": "Schema for skill workflow definitions in YAML frontmatter",
  "type": "object",
  "required": ["id", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique workflow identifier",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable workflow name"
    },
    "version": {
      "type": "integer",
      "description": "Schema version for backwards compatibility",
      "minimum": 1,
      "default": 1
    },
    "description": {
      "type": "string",
      "description": "Brief description of workflow purpose"
    },
    "steps": {
      "type": "array",
      "description": "Ordered list of workflow steps",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/step"
      }
    }
  },
  "definitions": {
    "step": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique step identifier within workflow",
          "pattern": "^[a-z][a-z0-9_-]*$"
        },
        "description": {
          "type": "string",
          "description": "Human-readable step description"
        },
        "type": {
          "type": "string",
          "description": "Step type determining behavior",
          "enum": ["skill", "agent", "user_decision", "spawn_agents", "terminal"]
        },
        "skill": {
          "type": "string",
          "description": "Skill name to invoke (for type=skill)"
        },
        "agent": {
          "type": "string",
          "description": "Agent name to use (for type=agent)"
        },
        "question": {
          "type": "string",
          "description": "Question text (for type=user_decision)"
        },
        "header": {
          "type": "string",
          "description": "AskUserQuestion header (for type=user_decision)",
          "maxLength": 12
        },
        "options": {
          "type": "array",
          "description": "Decision options (for type=user_decision)",
          "items": {
            "$ref": "#/definitions/option"
          },
          "minItems": 2,
          "maxItems": 4
        },
        "agents": {
          "type": "array",
          "description": "Agents to spawn in parallel (for type=spawn_agents)",
          "items": {
            "$ref": "#/definitions/spawn_agent"
          }
        },
        "wait_for": {
          "type": "string",
          "description": "Wait condition for spawn_agents",
          "enum": ["all", "any"]
        },
        "next": {
          "type": "string",
          "description": "Default next step ID"
        },
        "next_map": {
          "type": "object",
          "description": "Option ID to next step ID mapping",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "skill" } } },
          "then": { "required": ["skill"] }
        },
        {
          "if": { "properties": { "type": { "const": "agent" } } },
          "then": { "required": ["agent"] }
        },
        {
          "if": { "properties": { "type": { "const": "user_decision" } } },
          "then": { "required": ["question", "options"] }
        },
        {
          "if": { "properties": { "type": { "const": "spawn_agents" } } },
          "then": { "required": ["agents"] }
        }
      ]
    },
    "option": {
      "type": "object",
      "required": ["id", "label"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Option identifier for routing"
        },
        "label": {
          "type": "string",
          "description": "Display label for option"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of option"
        },
        "next": {
          "type": "string",
          "description": "Next step ID if this option is selected"
        }
      }
    },
    "spawn_agent": {
      "type": "object",
      "required": ["type", "task"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Agent type to spawn"
        },
        "task": {
          "type": "string",
          "description": "Task description for the agent"
        }
      }
    }
  }
}
