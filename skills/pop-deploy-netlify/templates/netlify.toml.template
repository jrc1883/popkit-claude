# Netlify Configuration
# Generated by PopKit deploy-netlify skill
# Documentation: https://docs.netlify.com/configure-builds/file-based-configuration/

[build]
  # Build command
  command = "{{BUILD_COMMAND}}"

  # Directory to deploy
  publish = "{{PUBLISH_DIR}}"

  # Environment variables for build
  [build.environment]
    NODE_VERSION = "{{NODE_VERSION}}"
    {{#PYTHON_VERSION}}
    PYTHON_VERSION = "{{PYTHON_VERSION}}"
    {{/PYTHON_VERSION}}

# Production context
[context.production]
  command = "{{BUILD_COMMAND}}"
  [context.production.environment]
    NODE_ENV = "production"

# Preview deployments (pull requests)
[context.deploy-preview]
  command = "{{BUILD_COMMAND}}"
  [context.deploy-preview.environment]
    NODE_ENV = "preview"

# Branch deploy context
[context.branch-deploy]
  command = "{{BUILD_COMMAND}}"

# Specific branch overrides
# [context.staging]
#   command = "npm run build:staging"

# Headers
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"

# Cache static assets
[[headers]]
  for = "/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.js"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.css"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# Redirects
[[redirects]]
  from = "/api/*"
  to = "{{API_URL}}/:splat"
  status = 200
  force = true

# SPA fallback
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Plugins
{{#LIGHTHOUSE}}
[[plugins]]
  package = "@netlify/plugin-lighthouse"
  [plugins.inputs]
    fail_on = "error"
{{/LIGHTHOUSE}}

{{#SITEMAP}}
[[plugins]]
  package = "@netlify/plugin-sitemap"
{{/SITEMAP}}

# Functions configuration
[functions]
  directory = "{{FUNCTIONS_DIR}}"
  node_bundler = "esbuild"

# Dev server settings
[dev]
  command = "{{DEV_COMMAND}}"
  port = {{DEV_PORT}}
  targetPort = {{TARGET_PORT}}
  autoLaunch = false

# =============================================================================
# Template Variables:
# {{BUILD_COMMAND}} - Build command (e.g., "npm run build")
# {{PUBLISH_DIR}} - Directory to deploy (e.g., "dist", "build", "public")
# {{NODE_VERSION}} - Node.js version (e.g., "20")
# {{PYTHON_VERSION}} - Python version if needed
# {{API_URL}} - Backend API URL for proxying
# {{FUNCTIONS_DIR}} - Netlify Functions directory (e.g., "netlify/functions")
# {{DEV_COMMAND}} - Development server command
# {{DEV_PORT}} - Port for netlify dev
# {{TARGET_PORT}} - Target port of your dev server
# {{LIGHTHOUSE}} - Enable Lighthouse plugin (true/false)
# {{SITEMAP}} - Enable sitemap plugin (true/false)
# =============================================================================
