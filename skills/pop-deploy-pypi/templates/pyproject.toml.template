# PyPI Package Configuration
# Generated by PopKit deploy-pypi skill
# Documentation: https://packaging.python.org/en/latest/

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{PACKAGE_NAME}}"
version = "{{VERSION}}"
description = "{{DESCRIPTION}}"
readme = "README.md"
license = {text = "{{LICENSE}}"}
requires-python = ">={{PYTHON_VERSION}}"
authors = [
    {name = "{{AUTHOR_NAME}}", email = "{{AUTHOR_EMAIL}}"}
]
keywords = [{{KEYWORDS}}]
classifiers = [
    "Development Status :: {{DEV_STATUS}}",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: {{LICENSE_CLASSIFIER}}",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: {{PYTHON_VERSION}}",
    {{#TYPING}}
    "Typing :: Typed",
    {{/TYPING}}
]

dependencies = [
    {{DEPENDENCIES}}
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0",
    "pytest-cov>=4.0",
    "black>=23.0",
    "ruff>=0.1.0",
    "mypy>=1.0",
]

[project.urls]
Homepage = "{{HOMEPAGE}}"
Documentation = "{{DOCS_URL}}"
Repository = "{{REPOSITORY}}"
Changelog = "{{CHANGELOG_URL}}"

{{#CLI_ENTRY}}
[project.scripts]
{{CLI_NAME}} = "{{PACKAGE_NAME}}.cli:main"
{{/CLI_ENTRY}}

[tool.hatch.build.targets.sdist]
include = [
    "/src",
    "/README.md",
    "/LICENSE",
]

[tool.hatch.build.targets.wheel]
packages = ["src/{{PACKAGE_NAME}}"]

[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = "-v --cov={{PACKAGE_NAME}} --cov-report=term-missing"

[tool.black]
line-length = 88
target-version = ["py{{PYTHON_VERSION_SHORT}}"]

[tool.ruff]
line-length = 88
select = ["E", "F", "W", "I", "N", "UP"]

[tool.mypy]
python_version = "{{PYTHON_VERSION}}"
strict = true

# =============================================================================
# Template Variables:
# {{PACKAGE_NAME}} - Package name (lowercase, underscores)
# {{VERSION}} - Initial version (e.g., "0.1.0")
# {{DESCRIPTION}} - Short package description
# {{LICENSE}} - License identifier (e.g., "MIT")
# {{LICENSE_CLASSIFIER}} - PyPI license classifier
# {{PYTHON_VERSION}} - Minimum Python version (e.g., "3.9")
# {{PYTHON_VERSION_SHORT}} - Short Python version (e.g., "39")
# {{AUTHOR_NAME}} - Package author name
# {{AUTHOR_EMAIL}} - Package author email
# {{KEYWORDS}} - Comma-separated keywords
# {{DEV_STATUS}} - Development status (3 - Alpha, 4 - Beta, 5 - Production/Stable)
# {{HOMEPAGE}} - Project homepage URL
# {{DOCS_URL}} - Documentation URL
# {{REPOSITORY}} - Repository URL
# {{CHANGELOG_URL}} - Changelog URL
# {{DEPENDENCIES}} - Package dependencies
# {{CLI_ENTRY}} - Enable CLI entry point (true/false)
# {{CLI_NAME}} - CLI command name
# {{TYPING}} - Package includes type hints (true/false)
# =============================================================================
